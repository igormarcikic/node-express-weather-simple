<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/styles.css">
</head>
<body>
    {{>header}}
    <div class="container">
        <div class="card text-white bg-info mb-3 mt-3">
            <div class="card-header">Get your daily forcast here:</div>
            <div class="card-body">
                <h5 class="card-title mb-4">Enter your city below:</h5>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="city" placeholder="City name..." id="city-name">
                    <div class="input-group-prepend">
                        <button class="btn btn-light" type="button" id="submit-button">Submit</button>
                    </div>
                </div>
                <div id="placeholder" class="alert alert-danger d-none" role="alert"></div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="./js/app.js"></script>
</body>
</html>